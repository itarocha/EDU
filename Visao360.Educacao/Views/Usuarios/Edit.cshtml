@model Dardani.EDU.Entities.VO.UsuarioVO

@{
    ViewBag.Title = ViewBag.Acao;
}

<script type="text/javascript">
    $(document).ready(function() {
        $("#Nome").focus();
    });
</script>
@if (Model.Id > 0)
{
<div class="row">
    <div class="col-md-12 btn-group pt-20">
    @Html.ActionLink("Ações", "Acoes", new { id = Model.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Novo Usuário", "Edit", new{}, new { @class = "btn btn-default" })
    </div>
</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="row">
        <div class="col-md-6">
            <label class="input-label f-left">@Html.LabelFor(model => model.Nome):</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "input-text f-left" })
        </div>
        <div class="col-md-3">
            <label class="input-label f-left">@Html.LabelFor(model => model.Email):</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "input-text f-left" })
        </div>
        <div class="col-md-3">
            <label class="input-label f-left">@Html.LabelFor(model => model.Nivel):</label>
            @Html.TextBoxFor(model => model.Nivel, new { @class = "input-text f-left" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.DataNascimento):</label>
            @Html.TextBoxFor(model => model.DataNascimento, new { @Value = Model.DataNascimento.ToString("dd/MM/yyyy"), @class = "input-text f-left data", @alt = "date" })
        </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.NumeroCPF):</label>
            @Html.TextBoxFor(model => model.NumeroCPF, new { @class = "input-text f-left", @alt = "cpf" })
        </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.Ativo):</label>
            @Html.DropDownListFor(model => model.Ativo, ViewBag.ListaSimNao as IEnumerable<SelectListItem>, new { @class = "input-select f-left" })
        </div>
    </div>

if(ViewBag.Novo)
{
    <div class="row">
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.NomeUsuario):</label>
            @Html.TextBoxFor(model => model.NomeUsuario, new { @class = "input-text-normal f-left" })
        </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.SenhaAcesso):</label>
            @Html.PasswordFor(model => model.SenhaAcesso, new { @class = "input-text-normal f-left" })
        </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.SenhaConfirmacao):</label>
            @Html.PasswordFor(model => model.SenhaConfirmacao, new { @class = "input-text-normal f-left" })
        </div>
    </div>
}

    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="col-md-12 pt-20">
            <input type="submit" value="Gravar" class="btn btn-success" />
            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
