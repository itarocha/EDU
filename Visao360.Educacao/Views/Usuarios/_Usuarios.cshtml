@model IEnumerable<Dardani.CMT.Entities.Model.Usuario>
@using Visao360.Educacao.Helpers
@using Res = ViewRes.Strings

<table id="grade_usuarios" class="grade">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Nível</th>
        <th>Ações</th>
    </tr>
</thead>
    <tbody>
@foreach (var item in Model)
{
    //var x = @Html.DisplayFor(modelItem => item.SubgrupoDescricao); 
    
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nivel)
        </td>
        <td style='width:180px;text-align:center;'>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) 
            @Html.ActionLink("Remover", "Delete", new { @item.Id })
        </td>
    </tr>
}
</tbody>
</table>

@{
    if(Model.Count() > 0){
        @PaginadorHelper.Paginador("pager")
    }
}
<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        var sortlist = [[1, 0]];
        var headers = { 2: { sorter: false } }; // coluna ações
        decorarTabela($("#grade_usuarios"), sortlist, headers, $("#pager"));
        bindPesquisa($('#pesquisar'), $("#grade_usuarios"));
    });
</script>



