@model Dardani.EDU.Entities.Model.PeriodoEscola

@{
    ViewBag.Title = "Confirmar Exclusão";
}

<h3>Deseja realmente excluir o Período abaixo?</h3>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(false)
    <fieldset>
        <legend>Detalhes</legend>
        <table style="width:100%;">
            <tr>
                <td style="width:100px;">
                    <div class="editor-label">Turno</div>
                </td>
                <td>
                    <div class="editor-field">@Html.DisplayFor(model => model.Turno.Descricao)</div>
                </td>
            </tr>
            <tr>
                <td style="width:100px;">
                    <div class="editor-label">Período</div>
                </td>
                <td>
                    <div class="editor-field">@Html.DisplayFor(model => model.PeriodoAula.Descricao)</div>
                </td>
            </tr>
            <tr>
                <td style="width:100px;">
                    <div class="editor-label">@Html.LabelFor(model => model.HoraInicio)</div>
                </td>
                <td>
                    <div class="editor-field">@Html.DisplayFor(model => model.HoraInicio)</div>
                </td>
            </tr>
            <tr>
                <td style="width:100px;">
                    <div class="editor-label">@Html.LabelFor(model => model.HoraTermino)</div>
                </td>
                <td>
                    <div class="editor-field">@Html.DisplayFor(model => model.HoraTermino)</div>
                </td>
            </tr>
        </table>
        @Html.HiddenFor(model => model.Id)
        <p>
            <input type="submit" value="Confirmar" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Voltar a Lista", "Index", "PeriodosEscola", null, new { @class="links_big"})
</div>
