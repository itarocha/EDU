@model Dardani.EDU.Entities.VO.EscolaVO

@{
    ViewBag.Title = ViewBag.Acao;
}

<script type="text/javascript">
    $(function () {
        $("#Nome").focus();
    });
</script>

<div class="row">
    <div class="col-md-12">
    @Html.ActionLink("Escolas", "Index", "Escolas", null, new { @class = "btn btn-info" }) 
    @Html.ActionLink("Nova Escola", "Edit", "Escolas", new { id = 0 }, new { @class = "btn btn-warning" }) 
    </div>
</div>
@if (Model.Id > 0)
{
<div class="row">
    <div class="col-md-12 btn-group pt-20">
    @Html.ActionLink("Dados Gerais", "Edit", new { id = Model.Id }, new { @class = "btn btn-default disabled" }) 
    @Html.ActionLink("Endereço", "Endereco", new { id = Model.Id }, new { @class = "btn btn-default" }) 
    @Html.ActionLink("Infraestrutura", "Infraestrutura", new { id = Model.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Dados Educacionais", "DadosEducacionais", new { id = Model.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Turnos", "Index","TurnosEscola", null, new { @class = "btn btn-default" })
    </div>
</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="row">
        <div class="col-md-8">
            <label class="input-label f-left">@Html.LabelFor(model => model.Nome):</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "input-text f-left" })
            </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.CodigoINEP):</label>
            @Html.TextBoxFor(model => model.CodigoINEP, new { @class = "input-text f-left", @alt="inep8" })
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.Email):</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "input-text f-left" })
        </div>
        <div class="col-md-6">
            <label class="input-label f-left">@Html.LabelFor(model => model.NomeGestor):</label>
            @Html.TextBoxFor(model => model.NomeGestor, new { @class = "input-text f-left" })
        </div>
        <div class="col-md-2">
            <label class="input-label f-left">@Html.LabelFor(model => model.FlagGestorDiretor)</label>
            @Html.DropDownListFor(model => model.FlagGestorDiretor, ViewBag.ListaSimNao as IEnumerable<SelectListItem>, new { @class = "input-select f-left" })
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.CodigoOrgaoRegional):</label>
            @Html.TextBoxFor(model => model.CodigoOrgaoRegional, new { @class = "input-text f-left" })
        </div>
        <div class="col-md-8">
            <label class="input-label f-left">@Html.LabelFor(model => model.NomeOrgaoRegional):</label>
            @Html.TextBoxFor(model => model.NomeOrgaoRegional, new { @class = "input-text f-left" })
        </div>
    </div>
        
    <div class="row">
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.TipoAdministracaoId):</label>
            @Html.DropDownListFor(model => model.TipoAdministracaoId, ViewBag.ListaTipoAdministracao as IEnumerable<SelectListItem>, new { @class = "input-select f-left" })
            </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.EstagioRegulamentacaoId):</label>
            @Html.DropDownListFor(model => model.EstagioRegulamentacaoId, ViewBag.ListaEstagioRegulamentacao as IEnumerable<SelectListItem>, new { @class = "input-select f-left" })
        </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.QuantidadeFuncionarios):</label>
            @Html.TextBoxFor(model => model.QuantidadeFuncionarios, new { @class = "input-text f-left" })
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.FlagAlimentacaoEscolar)</label>
            @Html.DropDownListFor(model => model.FlagAlimentacaoEscolar, ViewBag.ListaSimNao as IEnumerable<SelectListItem>, new { @class = "input-select f-left" })
        </div>
        <div class="col-md-8">
            <label class="input-label f-left">@Html.LabelFor(model => model.SituacaoFuncionamentoId):</label>
            @Html.DropDownListFor(model => model.SituacaoFuncionamentoId, ViewBag.ListaSituacaoFuncionamento as IEnumerable<SelectListItem>, new { @class = "input-select f-left" })
        </div>
    </div>
    @Html.HiddenFor(model => model.Id)
    
    <div class="row">
        <div class="col-md-12 pt-20">
            <p>
            <input type="submit" class="btn btn-success" value="Gravar" />
            @Html.ActionLink("Voltar a Lista", "Index", "Escolas", null, new { @class = "btn btn-default" })
            </p>
        </div>
    </div>
}
