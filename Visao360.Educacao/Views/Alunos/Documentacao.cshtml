@model Dardani.EDU.Entities.VO.PessoaDocumentacaoVO

@{
    ViewBag.Title = "Documentação do Aluno";
}

<script type="text/javascript">
    $(function () {
        $("#Logradouro").focus();

        // carregarCidades está em petra.js
        $('#CertidaoUFId').change(function () {
            carregarCidades($(this), $("#CertidaoCidadeId"));
        });
        carregarCidades($('#CertidaoUFId'), $("#CertidaoCidadeId"));
    });
</script>
@if (ViewBag.TurmaId > 0) {
<div class="alert alert-info">
    Turma: <strong>@ViewBag.TurmaNome</strong>
</div>
}
@if (Model.Id > 0)
{
<div class="row">
    <div class="col-md-12 btn-group pt-20">
        <a href="/Alunos/Edit/@ViewBag.MatriculaId" class="btn btn-default">Dados Básicos</a>&nbsp;
        <a href="/Alunos/Endereco/@ViewBag.MatriculaId" class="btn btn-default">Endereço</a>&nbsp;
        <a href="/Alunos/Documentacao/@ViewBag.MatriculaId" class="btn btn-default disabled">Documentação</a>&nbsp;
    </div>
</div>
}
@using (Html.BeginForm())
{
