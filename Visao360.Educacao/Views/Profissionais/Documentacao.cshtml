@model Dardani.EDU.Entities.VO.PessoaDocumentacaoVO

@{
    ViewBag.Title = "Documentação do Profissional";
}

<script type="text/javascript">
$(function () {
    $("#Logradouro").focus();
    // carregarCidades em petra.js
    $('#CertidaoUFId').change(function () {
        carregarCidades($(this), $("#CertidaoCidadeId"));
    });
    carregarCidades($('#CertidaoUFId'), $("#CertidaoCidadeId"));
});
</script>
@if (Model.PessoaId > 0)
{
<div class="row">
    <div class="col-md-12 btn-group pt-20">
    <a href="/Profissionais/Edit/@Model.PessoaId" class="btn btn-default">Dados Básicos</a>&nbsp;
    @Html.ActionLink("Endereço", "Endereco", new { id = Model.PessoaId }, new { @class = "btn btn-default" })
    @Html.ActionLink("Documentação", "Documentacao", new { id = Model.PessoaId }, new { @class = "btn btn-default disabled" })
    @Html.ActionLink("Disciplinas", "Disciplinas", new { id = Model.PessoaId }, new { @class = "btn btn-default" })
    <a href="/Profissionais/Edit" class="btn btn-default">Novo Profissional</a>
    </div>
</div>
}
