@model Dardani.EDU.Entities.VO.PessoaDisciplinaVO

@{
    ViewBag.Title = "Disciplinas do Profissional";
    List<Dardani.EDU.Entities.Model.Disciplina> ListaItens = (List<Dardani.EDU.Entities.Model.Disciplina>)Session["ListaItens"];
    String situacaoItem = "";
}

<style>
    label {width: 45%; display:block; float:left;}
</style>

<script type="text/javascript">
    $(function() {
    });
</script>
@if (Model.Id > 0)
{
<div class="row">
    <div class="col-md-12 btn-group pt-20">
    <a href="/Profissionais/Edit/@Model.Id" class="btn btn-default">Dados Básicos</a>&nbsp;
    @Html.ActionLink("Endereço", "Endereco", new { id = Model.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Documentação", "Documentacao", new { id = Model.Id }, new { @class = "btn btn-default" })
    @Html.ActionLink("Disciplinas", "Disciplinas", new { id = Model.Id }, new { @class = "btn btn-default disabled" })
    <a href="/Profissionais/Edit" class="btn btn-default">Novo Profissional</a>
    </div>
</div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="row">
        <div class="col-md-12">
            <label class="input-label f-left">Nome:</label>
            <h4>@ViewBag.PessoaNome</h4>
        </div>
    </div>

    foreach (Dardani.EDU.Entities.Model.Disciplina ite in ListaItens)
    {
        situacaoItem = "";
        foreach (int cli in Model.ListaDisciplinas)
        {
            if (ite.Id == cli)
            {
                situacaoItem = "checked";
                break;
            }
        }
        <div class="row">
            <div class="col-md-12">
                <label style="font-weight:normal; width:100%;"><input type="checkbox" name="ListaDisciplinas" value="@ite.Id" @situacaoItem/> @ite.Descricao</label>
            </div>
        </div>
    }
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PessoaId)

    <div class="row">
        <div class="col-md-12 pt-20">
            <input type="submit" value="Gravar" class="btn btn-success" />
            @Html.ActionLink("Voltar a Lista", "Index", "Profissionais", null, new { @class="btn btn-default"})
        </div>
    </div>
}
<p></p>

