@model Visao360.Educacao.Models.LogOnModel

@{
    ViewBag.Title = "Identificação";
}
<script type="text/javascript">
    $(document).ready(function() {
        $("#UserName").focus();
    });
</script>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="row">
        <div class="col-md-6">
            <label class="input-label f-left">@Html.LabelFor(model => model.UserName):</label>
            @Html.TextBoxFor(model => model.UserName, new { @class = "input-text-normal f-left" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label class="input-label f-left">@Html.LabelFor(model => model.Password):</label>
            @Html.PasswordFor(model => model.Password, new { @class = "input-text-normal f-left" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 pt-20">
            <input type="submit" value="Login" class="btn btn-success" />
            @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class="btn btn-default"})
        </div>
    </div>
}
