@model Visao360.Educacao.Models.LogOnModel

@{
    ViewBag.Title = "Identificação";
}
<script type="text/javascript">
    $(document).ready(function() {
        $("#UserName").focus();
    });
</script>
@using (Html.BeginForm("Login", "Contas", FormMethod.Post, new { @class="form-signin", @role="form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <h2 class="form-signin-heading">Entre com seus dados</h2>

    @Html.TextBoxFor(model => model.UserName, new { @class="form-control", @placeholder = "Usuário" })
    @Html.PasswordFor(model => model.Password, new { @class = "form-control",  @placeholder = "Senha" })
    <div class="col-md-12 pt-20">
        <input type="submit" value="Login" class="btn btn-lg btn-primary btn-block" />
        @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn btn-lg btn-default btn-block" })
    </div>
}
