@model Dardani.EDU.Entities.VO.SalaVO

@{
    ViewBag.Title = ViewBag.Acao;
}

<script type="text/javascript">
    $(function() {
        $("#Descricao").focus();
    });
</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="row">
        <div class="col-md-12">
            <label class="input-label f-left">@Html.LabelFor(model => model.Descricao):</label>
            @Html.TextBoxFor(model => model.Descricao, new { @class = "input-text f-left" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label class="input-label f-left">@Html.LabelFor(model => model.TipoSalaId):</label>
            @Html.DropDownListFor(model => model.TipoSalaId, ViewBag.ListaTipoSala as IEnumerable<SelectListItem>, new { @class = "input-select f-left" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label class="input-label f-left">@Html.LabelFor(model => model.Metragem):</label>
            @Html.TextBoxFor(model => model.Metragem, new { @class = "input-text f-left" })
        </div>
        <div class="col-md-6">
            <label class="input-label f-left">@Html.LabelFor(model => model.Capacidade):</label>
            @Html.TextBoxFor(model => model.Capacidade, new { @class = "input-text f-left" })
        </div>
    </div>
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.EscolaId)
    <div class="row">
        <div class="col-md-12 pt-20">
            <input type="submit" value="Gravar" class="btn btn-success" />
            @Html.ActionLink("Voltar", "Index", "Salas", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
