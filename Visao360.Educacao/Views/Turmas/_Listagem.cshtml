@model IEnumerable<Dardani.EDU.Entities.VO.TurmaVO>
@using Visao360.Educacao.Helpers

@{
    WebGrid grid = new WebGrid(Model, rowsPerPage: 20, ajaxUpdateContainerId: "gridArea", defaultSort: "Descricao");
}

<div id="gridArea">
@grid.GetHtml(
    tableStyle:"table table-striped",
    //alternatingRowStyle: "altRow",
    columns:new[] {
        grid.Column("Id", style:"to-the-right",canSort:false),
        grid.Column("Nome",header:"Descrição",canSort:false),
        grid.Column("TurnoDescricao",header:"Turno",canSort:false),
        grid.Column("ModalidadeDescricao",header:"Modalidade",canSort:false),
        //grid.Column("SerieDescricao",header:"Série"),
        grid.Column("CalendarioAno",header:"Calendário",canSort:false),
        grid.Column("",header:"Ações", format:@<text>
                @Html.ActionLink("Movimentação", "View", new { id = item.Id }, new { @class = "btn btn-xs btn-info"}) 
                </text>)
    }
)
</div>
