@model Dardani.EDU.Entities.Model.TipoSala

@{
    ViewBag.Title = ViewBag.Acao;
    List<Dardani.GER.Entities.Model.ItemStringVO> ListaSimNao = (List<Dardani.GER.Entities.Model.ItemStringVO>)Session["ListaSimNao"];
}

<script type="text/javascript">
    $(function() {
        $("#Descricao").focus();
    });
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    <div class="row">
        <div class="col-md-8">
            <label class="input-label f-left">@Html.LabelFor(model => model.Descricao):</label>
            @Html.TextBoxFor(model => model.Descricao, new { @class = "input-text f-left" })
        </div>
        <div class="col-md-4">
            <label class="input-label f-left">@Html.LabelFor(model => model.FlagSalaAula):</label>
            @Html.DropDownListFor(model => model.FlagSalaAula, new SelectList(ListaSimNao, "Id", "Descricao"), new { @class = "input-select f-left" })
        </div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="col-md-12 pt-20">
            <input type="submit" value="Gravar" class="btn btn-success" />
            @Html.ActionLink("Voltar", "Index", "TiposSalas", null, new { @class = "btn btn-default" })
        </div>
    </div>
}
